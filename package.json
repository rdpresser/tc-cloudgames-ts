{
  "name": "tc-cloudgames-ts",
  "version": "1.0.0",
  "description": "Tech Challenge Cloud Games in TypeScript",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && tsc",
    "start": "node -r tsconfig-paths/register dist/index.js",
    "build-and-start": "npm run build && npm start",
    "upgrade-deps": "npx npm-check-updates -u && npm install",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "test": "jest --config jest.config.js",
    "test:watch": "jest --watch --config jest.config.js",
    "test:coverage": "jest --coverage --config jest.config.js",
    "test:coverage:check": "jest --coverage --coverageReporters=text --coverageReporters=html --config jest.config.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rdpresser/tc-cloudgames-ts.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/rdpresser/tc-cloudgames-ts/issues"
  },
  "homepage": "https://github.com/rdpresser/tc-cloudgames-ts#readme",
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.28.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.30",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.1",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.3.4",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@faker-js/faker": "^9.8.0",
    "eslint-plugin-neverthrow": "^1.1.4",
    "fastify": "^5.3.3",
    "fastify-plugin": "^5.0.1",
    "fastify-sensible": "^3.2.0",
    "mediatr-ts": "^2.0.2",
    "module-alias": "^2.2.3",
    "neverthrow": "^8.2.0",
    "ts-mockito": "^2.6.1",
    "tsyringe": "^4.10.0",
    "uuid": "^11.1.0",
    "zod": "^3.25.56"
  },
  "_moduleAliases": {
    "application": "dist/application",
    "domain": "dist/domain",
    "shared": "dist/shared",
    "interfaces": "dist/interfaces",
    "infrastructure": "dist/infrastructure"
  }
}
